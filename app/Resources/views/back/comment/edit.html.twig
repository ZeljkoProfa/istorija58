{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Comment edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.author) }}
        {{ form_errors(edit_form.author) }}
        {{ form_widget(edit_form.author) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.body) }}
        {{ form_errors(edit_form.body) }}
        {{ form_widget(edit_form.body) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.status) }}
        {{ form_errors(edit_form.status) }}
        {{ form_widget(edit_form.status) }}
    </div>
    <i class="fa fa-pencil move-right icon-color"></i>
    <input type="submit" value="Edit" class="btn btn-primary btn-edit"/>
    {{ form_end(edit_form) }}
    
    <ul class="buttons">
        <li>
            <a href="{{ path('comment_index') }}" class="btn btn-primary fixed_left back-to-list-button">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <i class="fa fa-trash move-right-trash-icon icon-color"></i>
            <input type="submit" value="Delete" class="btn danger delete-button">
            {{ form_end(delete_form) }}
        </li>
        <li>
            {% if user_ip.ip is defined %}
                <span class="btn btn-primary fix-margin">Forbid IP: {{ user_ip.ip }}</span>
            {% endif %}
        </li>
    </ul>
{% endblock %}
