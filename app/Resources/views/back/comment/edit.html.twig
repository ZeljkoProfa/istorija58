{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Izmena Komentara</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.author) }}
        {{ form_errors(edit_form.author) }}
        {{ form_widget(edit_form.author) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.body) }}
        {{ form_errors(edit_form.body) }}
        {{ form_widget(edit_form.body) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.status) }}
        {{ form_errors(edit_form.status) }}
        {{ form_widget(edit_form.status) }}
    </div>
    {% include 'back/common/edit_button.html.twig' %}
    {{ form_end(edit_form) }}
    
    <ul class="buttons">
        <li>
            <a href="{{ path('comment_index') }}" class="btn btn-primary fixed_left back-to-list-button">
                <i class="fa fa-list"></i>
                Nazad na listu komentara
            </a>
        </li>
        <li>
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
        <li>
            {% if user_ip.ip is defined %}
                <span class="btn btn-primary fix-margin">Zabrani IP: {{ user_ip.ip }}</span>
            {% endif %}
        </li>
    </ul>
{% endblock %}
