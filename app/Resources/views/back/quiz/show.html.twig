{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Quizname</th>
                <td>{{ quiz.quizName }}</td>
            </tr>
            <tr>
                <th>Quizcategory</th>
                <td>{{ quiz.quizCategory }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ quiz.status }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ quiz.total }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if quiz.created %}{{ quiz.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('quiz_index') }}" class="btn btn-primary"><i class="fa fa-list"></i>Back to the list</a>
        </li>
        <li>
            <a href="{{ path('quiz_edit', { 'id': quiz.id }) }}" class="btn btn-primary"><i class="fa fa-pencil" style="color: white;"></i>Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <i style="color:white;" class="fa fa-trash move-right"></i>
            <input type="submit" value="Delete" class="btn btn-move-fafa">
            {{ form_end(delete_form) }}
        </li>
    </ul>




    <h1>Quiz questions list</h1>

    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>N.</th>
                <!--<th>Quizid</th>-->
                <th>Question</th>
                <th>Pts.</th>
                <!--<th>Created</th>-->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for quizQuestion in quizQuestions %}
                <tr class="odd gradeX">
                    <td>{{ quizQuestion.number }}</td>
                    <!--<td>{# quizQuestion.quizId #}</td>-->
                    <td>{{ quizQuestion.question }}</td>
                    <td>{{ quizQuestion.points }}</td>
                    
                    <td>
                        <ul  class="buttons">
                            <li>
                                <a href="{{ path('quizquestions_show', { 'id': quizQuestion.id }) }}" class="btn btn-primary"><i class="fa fa-eye"></i>show</a>
                            </li>
                            <li>
                                <a href="{{ path('quizquestions_edit', { 'id': quizQuestion.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>edit</a>
                            </li>
                            
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('quizquestions_new', { 'id': quiz.id }) }}" style="margin-left: -40px !important;" class="btn btn-primary"><i class="fa fa-plus"></i>Create a new question</a>
        </li>
    </ul>
{% endblock %}
