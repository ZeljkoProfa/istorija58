{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Quizquestion creation</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.question) }}
        {{ form_errors(form.question) }}
        {{ form_widget(form.question) }}
    </div>
    <div class="form-group">
        {{ form_label(form.answer1) }}
        {{ form_errors(form.answer1) }}
        {{ form_widget(form.answer1) }}
    </div>
    <div class="form-group">
        {{ form_label(form.answer2) }}
        {{ form_errors(form.answer2) }}
        {{ form_widget(form.answer2) }}
    </div>
    <div class="form-group">
        {{ form_label(form.answer3) }}
        {{ form_errors(form.answer3) }}
        {{ form_widget(form.answer3) }}
    </div>
    <div class="form-group">
        {{ form_label(form.answer4) }}
        {{ form_errors(form.answer4) }}
        {{ form_widget(form.answer4) }}
    </div>
    <div class="form-group">
        {{ form_label(form.trueAnswer) }}
        {{ form_errors(form.trueAnswer) }}
        {{ form_widget(form.trueAnswer) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lesson) }}
        {{ form_errors(form.lesson) }}
        {{ form_widget(form.lesson) }}
    </div>
    <div class="form-group">
        {{ form_label(form.img) }}
        {{ form_errors(form.img) }}
        {{ form_widget(form.img) }}
    </div>
    <div class="form-group">
        {{ form_label(form.points) }}
        {{ form_errors(form.points) }}
        {{ form_widget(form.points) }}
    </div>
    <div class="row">
    {% if edit_form.vars.data.img.filename is defined %}
        <div class="image-input col-xs-12 col-md-6">
            {{ form_label(form.imgdel) }}<br>
            {{ form_errors(form.imgdel) }}
            {{ form_widget(form.imgdel) }}
        </div>
    {% else %}
        <div class="image-input col-xs-12 col-md-6">
            {% do form.imgdel.setRendered() %}<br>

        </div>
    {% endif %}
    </div>
    <i class="fa fa-plus icons-positioning-and-styles" style="color:white; "></i><input type="submit" value="Create" style="margin-left: -12px;" class="btn btn-primary btn-create btn-move-fafa"/>
    
    {{ form_end(form) }}
    
    <ul class="buttons" >
        <li>
            <a href="{{ path('quiz_index') }}" style="margin-left: -40px !important;" class="btn btn-primary fixed_left">
                <i class="fa fa-list"></i>Back to the list
            </a>
        </li>
    </ul>
    
{% endblock %}
