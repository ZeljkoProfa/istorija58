{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Quizquestions list</h1>

    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Number</th>
                <th>Quizid</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quizQuestion in quizQuestions %}
            <tr class="odd gradeX">
                <td>{{ quizQuestion.number }}</td>
                <td>{{ quizQuestion.quizId }}</td>
                <td>{{ quizQuestion.question }}</td>
                <td>
                    <ul  class="buttons">
                        <li>
                            <a href="{{ path('quizquestions_show', { 'id': quizQuestion.id }) }}" class="btn btn-primary"><i class="fa fa-eye"></i>show</a>
                        </li>
                        <li>
                            <a href="{{ path('quizquestions_edit', { 'id': quizQuestion.id }) }}" class="btn btn-primary"><i class="fa fa-pencil"></i>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('quizquestions_new') }}" style="margin-left: -40px !important;" class="btn btn-primary"><i class="fa fa-plus"></i>Create a new question</a>
        </li>
    </ul>
{% endblock %}
