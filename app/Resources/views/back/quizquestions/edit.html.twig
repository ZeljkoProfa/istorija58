{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Quizquestion edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.question) }}
        {{ form_errors(edit_form.question) }}
        {{ form_widget(edit_form.question) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.answer1) }}
        {{ form_errors(edit_form.answer1) }}
        {{ form_widget(edit_form.answer1) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.answer2) }}
        {{ form_errors(edit_form.answer2) }}
        {{ form_widget(edit_form.answer2) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.answer3) }}
        {{ form_errors(edit_form.answer3) }}
        {{ form_widget(edit_form.answer3) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.answer4) }}
        {{ form_errors(edit_form.answer4) }}
        {{ form_widget(edit_form.answer4) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.trueAnswer) }}
        {{ form_errors(edit_form.trueAnswer) }}
        {{ form_widget(edit_form.trueAnswer) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.points) }}
        {{ form_errors(edit_form.points) }}
        {{ form_widget(edit_form.points) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.lesson) }}
        {{ form_errors(edit_form.lesson) }}
        {{ form_widget(edit_form.lesson) }}
    </div>
    <div class="row form-group block">
        {% if edit_form.vars.data.img.filename is defined %}
            <div class="image col-xs-12 col-md-4">
                <img src="{{ '/uploads/img/' ~ edit_form.vars.data.img.filename }}" 
                     class="image-on-edit" alt="No preview!">
            </div>
            {% endif %}
        
        <div  id="image-value" class="image-input col-xs-12 col-md-6">
            {{ form_label(edit_form.img) }}
            {{ form_errors(edit_form.img) }}
            {{ form_widget(edit_form.img) }}
        </div>
        {% if edit_form.vars.data.img.filename is defined %}
            <div class="image-input col-xs-12 col-md-6">
                {{ form_label(edit_form.imgdel) }}<br>
                {{ form_errors(edit_form.imgdel) }}
                {{ form_widget(edit_form.imgdel) }}
            </div>
            {% else %}
                <div class="image-input col-xs-12 col-md-6">
                {% do edit_form.imgdel.setRendered() %}<br>
                
            </div>
        {% endif %}
    </div>

    <div>
        {% include 'back/common/edit_button.html.twig' %}
    </div>
    {{ form_end(edit_form) }}

    <ul class="buttons">
        <li>
            <a href="{{ path('quiz_show', { id:quizid }) }}" class="btn btn-primary fixed_left back-to-list-button">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li >
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
    </ul>
    <script>
        $(document).ready(function () {
            // $('#appbundle_quizquestions_imgdel').closest('div')
        });
    </script>
{% endblock %}
