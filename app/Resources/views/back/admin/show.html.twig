{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Admin</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ admin.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ admin.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ admin.password }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ admin.phone }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Vreme nastanka</th>
                <td>{{ admin.created|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="buttons fix-left-space">
        <li>
            <a href="{{ path('admin_index') }}" class="btn btn-primary">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_edit', { 'id': admin.id }) }}" class="btn btn-primary">
                <i class="fa fa-pencil icon-color">
                </i>
                Edit
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <i class="fa fa-trash trash-move-right icon-color"></i>
                <input type="submit" value="Delete" class="btn icon-color show-delete-button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
