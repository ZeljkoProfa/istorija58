{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Lista administratora sajta</h1>
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Pasvord</th>
                <th>Tel</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            {% for admin in admins %}
                <tr class="odd gradeX">
                    <td><a href="{{ path('admin_show', { 'id': admin.id }) }}">{{ admin.firstName }}</a></td>
                    <td>{{ admin.lastName }}</td>
                    <td>{{ admin.email }}</td>
                    <td>{{ admin.password }}</td>
                    <td>{{ admin.phone }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_show', { 'id': admin.id }) }} " class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                            Prikazi
                        </a>
                        <a href="{{ path('admin_edit', { 'id': admin.id }) }}" class="btn btn-primary">
                            <i class="fa fa-pencil"></i>
                            Izmeni
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul class="buttons">
        <li>
            <a href="{{ path('admin_new') }}" class="btn btn-primary index-create-button">
                <i class="fa fa-plus"></i>
                Kreiraj novog admina
            </a>
        </li>
    </ul>
{% endblock %}
