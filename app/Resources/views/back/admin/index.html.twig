{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Admins list</h1>
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for admin in admins %}
                <tr class="odd gradeX">
                    <td><a href="{{ path('admin_show', { 'id': admin.id }) }}">{{ admin.firstName }}</a></td>
                    <td>{{ admin.lastName }}</td>
                    <td>{{ admin.email }}</td>
                    <td>{{ admin.password }}</td>
                    <td>{{ admin.phone }}</td>
                    <td>{{ admin.created|date("m/d/Y") }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_show', { 'id': admin.id }) }} " class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                            show
                        </a>
                        <a href="{{ path('admin_edit', { 'id': admin.id }) }}" class="btn btn-primary">
                            <i class="fa fa-pencil"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul class="buttons">
        <li>
            <a href="{{ path('admin_new') }}" style="" class="btn btn-primary index-create-button">
                <i class="fa fa-plus"></i>
                Create new admin
            </a>
        </li>
    </ul>
{% endblock %}
