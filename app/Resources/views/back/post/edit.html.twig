{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Post edit</h1>
    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.title) }}
        {{ form_errors(edit_form.title) }}
        {{ form_widget(edit_form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.seoTitle) }}
        {{ form_errors(edit_form.seoTitle) }}
        {{ form_widget(edit_form.seoTitle) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.category) }}
        {{ form_errors(edit_form.category) }}
        {{ form_widget(edit_form.category) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.status) }}
        {{ form_errors(edit_form.status) }}
        {{ form_widget(edit_form.status) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.class) }}
        {{ form_errors(edit_form.class) }}
        {{ form_widget(edit_form.class) }}
    </div>
    {% include 'back/common/edit_button.html.twig' %}
    {{ form_end(edit_form) }}

    <ul class="buttons">
        <li>
            <a href="{{ path('post_index') }}" class="btn btn-primary fixed_left back-to-list-button">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li >
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
        <li>
            {# show ip #}
            {% if user_ip.ip is defined %}
                <span class="btn btn-primary">{{ user_ip.ip }}</span>
            {% endif %}
        </li>
    </ul>
{% endblock %}
