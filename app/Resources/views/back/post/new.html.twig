{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Post creation</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(form.seoTitle) }}
        {{ form_errors(form.seoTitle) }}
        {{ form_widget(form.seoTitle) }}
    </div>
    <div class="form-group">
        {{ form_label(form.body) }}
        {{ form_errors(form.body) }}
        {{ form_widget(form.body) }}
    </div>
    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_errors(form.category) }}
        {{ form_widget(form.category) }}
    </div>
    <div class="form-group">
        {{ form_label(form.status) }}
        {{ form_errors(form.status) }}
        {{ form_widget(form.status) }}
    </div>
    <div class="form-group">
        {{ form_label(form.class) }}
        {{ form_errors(form.class) }}
        {{ form_widget(form.class) }}
    </div>
    <i class="fa fa-plus move-right" style="color:white; right:-10px;"></i><input type="submit" value="Create" style="position:relative; left: -10px!important;" class="btn btn-primary btn-create btn-move-fafa"/>
    {{ form_end(form) }}

    <ul class="buttons" >
        <li>
            <a href="{{ path('post_index') }}" style="margin-left: -40px !important;" class="btn btn-primary fixed_left"><i class="fa fa-list"></i>Back to the list</a>
        </li>
    </ul>
{% endblock %}
