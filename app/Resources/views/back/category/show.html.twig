{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ category.adminId }}</td>
            </tr>
            <tr>
                <th>Gde prikazati</th>
                <td>{{ category.teachers }}</td>
            </tr>
            <tr>
                <th>Vreme kreiranja</th>
                <td>{{ category.created|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('category_index') }}" class="btn btn-primary"><i class="fa fa-list"></i>Back to the list</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary"><i class="fa fa-pencil" style="color: white;"></i>Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <i style="color:white;" class="fa fa-trash move-right"></i><input type="submit" value="Delete" class="btn btn-move-fafa">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
