{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Kategorija {{ category.title }}</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Naslov</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ category.adminId }}</td>
            </tr>
            <tr>
                <th>Gde prikazati</th>
                <td>{{ category.teachers }}</td>
            </tr>
            <tr>
                <th>Vreme kreiranja</th>
                <td>{{ category.created|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('category_index') }}" class="btn btn-primary">
                <i class="fa fa-list"></i>
                Nazad na listu kategorija
            </a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary">
                <i class="fa fa-pencil icon-color">
                </i>
                Izmeni
            </a>
        </li>
        <li>
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
    </ul>
{% endblock %}
