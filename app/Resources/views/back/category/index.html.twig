{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Lista kategorija</h1>

    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Kategorija</th>
                <th>Id autora | admina</th>
                <th>Gde prikazati?</th>
                <th>Vreme nastanka</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="odd gradeX">
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.title }}</a></td>
                <td>{{ category.adminId }}</td>
                <td>{{ category.teachers }}</td>
                <td>{{ category.created|date("m/d/Y") }}</td>
                <td>
                    <ul class="buttons">
                        <li>
                            <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-primary">
                                <i class="fa fa-eye"></i>Prikazi
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-primary">
                                <i class="fa fa-pencil"></i>Izmeni
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i>
                Kreiraj novu kategoriju
            </a>
        </li>
    </ul>
{% endblock %}
