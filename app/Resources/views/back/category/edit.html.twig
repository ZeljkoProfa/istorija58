  {% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Category edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <i class="fa fa-pencil move-right" style="color:white;"></i><input type="submit" value="Edit" style="position:relative; left: -10px!important;" class="btn btn-primary btn-create btn-move-fafa"/>
    {{ form_end(edit_form) }}

    <ul class="buttons">
        <li>
            <a href="{{ path('category_index') }}" style="margin-left: -40px !important;" class="btn btn-primary fixed_left"><i class="fa fa-list"></i>Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <i class="fa fa-trash move-right" style="color:white;"></i><input type="submit" value="Delete" class="btn danger btn-move-fafa">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
