{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Thought edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.text) }}
        {{ form_errors(edit_form.text) }}
        {{ form_widget(edit_form.text) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.author) }}
        {{ form_errors(edit_form.author) }}
        {{ form_widget(edit_form.author) }}
    </div>
    <div>
        <i class="fa fa-pencil move-right" style="color:white; margin-left: -5px;"></i>
        <input type="submit" value="Edit" style="position:relative; left: -10px!important;" class="btn btn-primary btn-create btn-move-fafa"/>
    </div>
    {{ form_end(edit_form) }}

    <ul class="buttons">
        <li>
            <a href="{{ path('thoughts_index') }}" style="margin-left: -40px !important;" class="btn btn-primary fixed_left"><i class="fa fa-list"></i>Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <i class="fa fa-trash move-right-e" style="color:white;"></i><input type="submit" value="Delete" class="btn danger btn-move-fafa">
            {{ form_end(delete_form) }}
        </li>
    
{% endblock %}
