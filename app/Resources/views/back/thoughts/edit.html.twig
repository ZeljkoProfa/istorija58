{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Thought edit</h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_label(edit_form.text) }}
        {{ form_errors(edit_form.text) }}
        {{ form_widget(edit_form.text) }}
    </div>
    <div class="form-group">
        {{ form_label(edit_form.author) }}
        {{ form_errors(edit_form.author) }}
        {{ form_widget(edit_form.author) }}
    </div>
    <div>
        {% include 'back/common/edit_button.html.twig' %}
    </div>
    {{ form_end(edit_form) }}

    <ul class="buttons">
        <li>
            <a href="{{ path('thoughts_index') }}" class="btn btn-primary fixed_left back-to-list-button">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li >
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
    </ul>
{% endblock %}
