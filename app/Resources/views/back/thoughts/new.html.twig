{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Thought creation</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.text) }}
        {{ form_errors(form.text) }}
        {{ form_widget(form.text) }}
    </div>
    <div class="form-group">
        {{ form_label(form.author) }}
        {{ form_errors(form.author) }}
        {{ form_widget(form.author) }}
    </div>
    <i class="fa fa-plus icons-positioning-and-styles" style="color:white; "></i><input type="submit" value="Create" style="margin-left: -12px;" class="btn btn-primary btn-create btn-move-fafa"/>
    {{ form_end(form) }}

    <ul class="buttons" >
        <li>
            <a href="{{ path('thoughts_index') }}" style="margin-left: -40px !important;" class="btn btn-primary fixed_left">
                <i class="fa fa-list"></i>Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
