{% extends 'back/base.html.twig' %}

{% block body %}
    <h1>Thoughts list</h1>

    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Text</th>
                <th>Author</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for thought in thoughts %}
            <tr>
                <td><a href="{{ path('thoughts_show', { 'id': thought.id }) }}">{{ thought.id }}</a></td>
                <td>{{ thought.text }}</td>
                <td>{{ thought.author }}</td>
                <td>{% if thought.created %}{{ thought.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul  class="buttons">
                        <li>
                            <a href="{{ path('thoughts_show', { 'id': thought.id }) }}" class="btn btn-primary">show</a>
                        </li>
                        <li>
                            <a href="{{ path('thoughts_edit', { 'id': thought.id }) }}" class="btn btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('thoughts_new') }}" style="margin-left: -40px !important;" class="btn btn-primary"><i class="fa fa-plus"></i>Create a new question</a>
        </li>
    </ul>
{% endblock %}
