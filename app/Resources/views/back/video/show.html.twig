{% extends 'back/base.html.twig' %}
{% block body %}

    

    <h1>Video</h1>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ video.author }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ video.path }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if video.created %}{{ video.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ video.status }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="buttons">
        <li>
            <a href="{{ path('video_index') }}" class="btn btn-primary">
                <i class="fa fa-list"></i>
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('video_edit', { 'id': video.id }) }}" class="btn btn-primary">
                <i class="fa fa-pencil icon-color"></i>
                Izmeni
            </a>
        </li>
        <li>
            {% block delete_button %}
                {% include 'back/common/delete_button.html.twig' %}
            {% endblock %}
        </li>
    </ul>
    <div id="iframe-back">
        <iframe id="video-frame" 
                src="{{ video.path }}"
                frameborder="0" allowfullscreen class="video-iframe" >
        </iframe>
    </div>
{% endblock %}
