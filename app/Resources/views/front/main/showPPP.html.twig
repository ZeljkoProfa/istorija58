<div class="card my-4">
    <h5 class="card-header">Poslednje dodate prezentacije</h5>
    {% for post in posts %}
        <div class="last-ppp">
            <a href="{{ asset('uploads/posts/') }}{{post.body}}" target="_blank">
                <i class="fa fa-file-powerpoint-o" aria-hidden="false" ></i>
                {{ post.title }}
            </a>
        </div>
    {% endfor %}
</div>