{% extends 'front/base.html.twig' %}

{% block body %}

    {% if hidden_message is defined %}{{ hidden_message }}{% endif %}
    <h3 class="margin-top-10">Dodaj sadr≈æaj</h3>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
    </div>
    <div class="form-group">
        {{ form_label(form.seoTitle) }}
        {{ form_errors(form.seoTitle) }}
        {{ form_widget(form.seoTitle) }}
    </div>
    <div class="form-group">
        {{ form_label(form.body) }}<br>
