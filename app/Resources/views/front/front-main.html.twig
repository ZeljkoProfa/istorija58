                            <script>
            $(document).ready(function () {
                // $('#appbundle_comment_author').val('');
                // $('#appbundle_comment_body').val('');
                var sl_sh_remove = $('#sl_sh_remove');
                $("#sl_sh_remove").on('change', function(){
                   if($(this).is(':checked')){
                       $('.bx-wrapper').hide();
                   } else {
                       $('.bx-wrapper').show();
                   }
                });
                
                $('.tought-button').on('click', function(){
                    $('.tought-of-day').show();
                    $(this).hide();
                });
                $('.tought-of-day').on('click', function(){
                    $('.tought-button').show();
                    $(this).hide();
                });
            });
                            </script>
